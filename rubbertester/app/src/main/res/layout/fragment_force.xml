<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.kresshy.rubbertester.fragment.ForceFragment">

    <LinearLayout
        android:id="@+id/forceGraphBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AAAAAA"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pullForceText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Pull Force"
                    android:layout_weight="25"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pullLengthText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Pull Length"
                    android:layout_weight="25"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pullWork"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:text="Pull Work"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/possibleRotCount"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:text="Coeff"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pullForceDummy"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"

                    android:layout_weight="25"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/releaseLengthText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Release Length"
                    android:layout_weight="25"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/releaseWork"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:text="Release Work"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/releaseWorkDummy"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:weightSum="100"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/forceStartButton"
                    android:layout_weight="25"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Start" />

                <Button
                    android:id="@+id/forceStopButton"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:text="Stop" />

                <Button
                    android:id="@+id/forceMaxButton"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:text="Max force" />

                <Button
                    android:id="@+id/forceResetButton"
                    android:layout_width="100dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:text="Reset" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forceGraphContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>